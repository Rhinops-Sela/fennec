{
  "apiVersion": "eksctl.io/v1alpha5",
  "kind": "ClusterConfig",
  "nodeGroups": [
    {
      "name": "dynamodb",
      "minSize": 0,
      "maxSize": 100,
      "desiredCapacity": 0,
      "volumeSize": 50,
      "volumeType": "gp2",
      "privateNetworking": true,
      "iam": {
        "withAddonPolicies": {
          "autoScaler": true
        }
      },
      "labels": {
        "role": "dynamodb"
      },
      "instancesDistribution": {
        "instanceTypes": [
          "t3.large",
          "t3.xlarge",
          "t2.large"
        ]
      },
      "taints": {
        "dynamodb": "true:NoSchedule"
      },
      "tags": {
        "k8s.io/cluster-autoscaler/node-template/label/role": "dynamodb",
        "k8s.io/cluster-autoscaler/node-template/taint/dynamodb": "true:NoSchedule"
      }
    }
  ],
  "metadata": {
    "name": "fennec",
    "region": "eu-west-2"
  }
}
