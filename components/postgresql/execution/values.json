{
  "primary": {
    "nodeSelector": {
      "role": "postgresql"
    },
    "tolerations": [
      {
        "key": "postgresql",
        "operator": "Equal",
        "value": "true"
      }
    ],
    "resources": {
      "limits": {
        "cpu": 3,
        "memory": "6Gi"
      },
      "requests": {
        "cpu": 3,
        "memory": "6Gi"
      }
    }
  },
  "metrics": {
    "enabled": true
  }
}
