{
  "persistence": {
    "enabled": true
  },
  "extraEnvVars": [
    {
      "name": "EDGE_PORT",
      "value": "80"
    },
    {
      "name": "HOSTNAME_EXTERNAL",
      "value": "HOSTNAME_EXTERNAL"
    },
    {
      "name": "HOSTNAME",
      "value": "HOSTNAME"
    },
    {
      "name": "DEFAULT_REGION",
      "value": "eu-west-2"
    },
    {
      "name": "SERVICES",
      "value": "s3"
    }
  ],
  "nodeSelector": {
    "role": "s3"
  },
  "tolerations": [
    {
      "key": "s3",
      "operator": "Equal",
      "value": "true"
    }
  ],
  "service": {
    "type": "ClusterIP",
    "edgeService": {
      "name": "edge",
      "targetPort": 80,
      "port": 80
    }
  },
  "ingress": {
    "enabled":false,
    "hosts": [
      {
        "host": "HOSTNAME",
        "paths": [
          {
            "path": "/",
            "pathType": "ImplementationSpecific"
          }
        ]
      }
    ]
  }
}
