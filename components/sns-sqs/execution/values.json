{
  "persistence": {
    "enabled": true
  },
  "extraEnvVars": [
    {
      "name": "EDGE_PORT",
      "value": "80"
    },
    {
      "name": "HOSTNAME_EXTERNAL",
      "value": "HOSTNAME_EXTERNAL"
    },
    {
      "name": "HOSTNAME",
      "value": "HOSTNAME"
    },
    {
      "name": "DEFAULT_REGION",
      "value": "eu-west-2"
    },
    {
      "name": "SERVICES",
      "value": "sns"
    }
  ],
  "nodeSelector": {
    "role": "sns"
  },
  "tolerations": [
    {
      "key": "sns",
      "operator": "Equal",
      "value": "true"
    }
  ],
  "service": {
    "type": "ClusterIP",
    "edgeService": {
      "name": "edge",
      "targetPort": 4566,
      "port": 80
    }
  }
}
